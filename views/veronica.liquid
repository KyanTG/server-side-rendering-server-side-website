        {% for show in shows %}

        <h2>{{ show.radiostation }} {{ show.name }}</h2>
        <p> {{ show.body }} </p>

        {% endfor %}

        {% comment %} {% for show in shows, for person in persons %}

            <h2>{{ show.radiostation }} {{ show.name }}</h2>
            <p> {{ show.body }} </p>
            <h3>{{ person.full_name }}</h3>
            <img src="{{ person.cover }}"> {% endcomment %}

        {% comment %} {% for person in persons %}
    
        <h4>{{ person.full_name }}</h4>
        <img src="{{ person.cover }}">

        {% endfor %} {% endcomment %}
    </article>
</section>





